<style>
  .button_to {
    display: inline !important;
  }
</style>

<%= turbo_frame_tag dom_id(tweet) do %>
  <div>
    <td style="font-size: 30px;"><%= tweet.body %></td>

    <span>
      <%= button_to "쪼아 #{tweet.likes_count}", tweet_like_path(tweet), method: :post, id: 'form' %>
    </span>
    <span><button><%= tweet.retweets_count %></button></span>

      <%= link_to 'Edit', edit_tweet_path(tweet) %>

    <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </div>
<% end %>